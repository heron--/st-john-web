@import "_helpers.styl"
@import "_reset.styl"

html 
    min-width 320px
    font-family 'Open Sans', sans-serif
    font-weight 400
    color #666

body 
    background-color #f5f5f5

.hide--desktop 
    @media (min-width 769px) 
        display none

.main-nav
    z-index 1

.main-nav__spacer
    height 78px

.main-nav__actual
    position fixed
    top 0
    left 0
    right 0
    background-color #fff

.main-nav__content-wrap 
    max-width 1000px
    width 100%
    margin 0 auto
    height 78px
    display flex
    align-items center
    justify-content space-between
    flex-direction row

.main-nav__left,
.main-nav__right 
    display flex
    height 100%
    align-items center

.main-nav__right
    @media (max-width 900px)
        display none

.main-nav__hamburger 
    display none
    height 43%
    margin-right 4%
    justify-content space-between
    align-items center
    flex-direction column
    cursor pointer
    width 36px

    @media (max-width 900px) 
        display flex
  
    &:active
        .main-nav__hamburger__line 
          background-color #e66b00

.main-nav__hamburger--menu-open
    .main-nav__hamburger__line 
        display none

    &:before,
    &:after 
        position absolute
        top 50%
        left 50%
        content ''
        width 36px
        height 8px
        margin-left -18px
        margin-top -4px
        background-color #f70
        border-radius 4px

    &:before 
        transform rotate(-45deg)

    &:after 
          transform rotate(45deg)

.main-nav__hamburger__line 
    width 100%
    height 8px
    border-radius 4px
    background-color #f70

.main-nav__logo 
    max-width 380px

    img 
        width 100%

    @media (max-width 900px) 
        margin-left 4%
        margin-right 10%
  

.main-nav__list-item 
    display inline-block
    font-size 13px
    margin-right 28px
    color #333

    &:after 
        content ''
        position absolute
        height 13px
        width 1px
        right -14px
        background-color #333

    &:last-of-type 
        margin-right 14px

        &:after 
          display none

.main-nav__link
    &:hover 
        text-decoration underline

.main-nav__donate-button 
    font-size 12px
    background-color #f70
    color #fff
    padding 0 18px
    line-height 31px
    border-radius 16px
    white-space nowrap

.mobile-nav 
    position fixed
    top 100%
    bottom 0
    left 0
    right 0
    background-color rgba(0,0,0,0.6)
    z-index 1

    &.mobile-nav--open 
        top 78px

        .mobile-nav__inner 
            left 55%

            @media (max-width 425px) 
                left 0
  

.mobile-nav
    .main-nav__donate-button 
        margin-top 18px

.mobile-nav__inner 
    position fixed
    top 78px
    bottom 0
    right 0
    left 100%
    background-color #32a1e0
    text-align center
    transition left ease 0.2s

.mobile-nav__list-item 
    margin-top 18px

.mobile-nav__link 
    color #fff

.main-footer 
    background-color #fff
    padding-top 45px
    margin-bottom 45px
    min-height 55px

.main-footer__left 
    max-width 365px

.footer-nav 
    overflow hidden
    font-size 0

.footer-nav__item 
    display inline-block
    margin-right 24px
    margin-top 18px
    font-size 13px
    line-height 16px
    font-weight 600

    &:after 
        position absolute
        content ''
        height 100%
        width 1px
        background-color #333
        right -13px

    &:last-of-type:after 
        display none

.footer-nav__item--no-line
    &:after 
        display none

.main-footer__logo 
    width 348px

    @media (max-width 650px) 
        width 80%
  
    img 
        width 100%

.main-footer__right 
    position absolute
    right 0
    top 28px

.icon-list 
    height 55px

.icon-list__item 
    display inline-block
    width 55px
    margin-right 16px

    &:last-of-type 
        margin-right 0

.content-wrap 
    max-width 1000px
    width 100%
    margin 0 auto

.header-mobile-bg
    img 
        width 100%

    @media (max-width 320px) 
        width 133%
  
.header-section 
    background-image url("../img/header-bg.jpg")
    background-size cover
    min-height 542px
    display flex
    justify-content center
    align-items center
    overflow hidden

    @media (max-width 768px) 
        display block
        background-image none
  
.header-section__callout 
    background-color rgba(255,255,255,0.82)
    padding 34px 63px 18px
    text-align center

    @media (max-width 768px) 
        background-color #ffc76a
  
    @media (max-width 425px) 
        padding-left 8%
        padding-right 8%

.header-section__callout__copy 
    font-weight 600
    font-style italic
    text-transform uppercase
    font-size 28px
    color #5b5b5b
    line-height 40px

.header-section__callout__button 
    color #fff
    font-size 22px
    font-weight 600
    background-color #32a1e0
    line-height 54px
    border-radius 27px
    cursor pointer
    margin-top 20px
    display block

    &:hover,
    &:active 
        background-color #2094d6

    @media (max-width 768px) 
        display inline-block
        width 70%

    @media (max-width 425px) 
        width 90%
  
.header-section__callout__learn-more 
    display inline-block
    margin-top 14px
    font-size 20px
    color #333
    text-decoration underline

    &:after 
        position absolute
        top 0
        right -12px
        content '\00BB'

    @media (max-width 768px) 
        display block

        &:after 
            left 112px
  
.section-header 
    font-style italic
    font-size 38px
    text-transform uppercase

.mission-section 
    text-align center
    padding-top 50px
    padding-bottom 80px

    .emphasis 
        font-style italic
        font-weight 600
        color #32a1e0

    .link 
        color #32a1e0
        text-decoration underline

        &:hover,
        &:active 
            text-decoration none

    @media (max-width 768px) 
        padding-top 22px
        padding-bottom 50px
  
.mission-section__header 
    color #32a1e0

.mission-section__copy 
    margin-top 40px
    font-size 30px
    line-height 1.3
    padding 0 25px

    @media (max-width 768px) 
        font-size 22px
        margin-top 22px

.goal-section 
    padding-top 50px
    padding-bottom 80px
    text-align center
    background-color #32a1e0

.goal-section__header 
    color #fff

.goal-callout-container 
    font-size 0
    margin-top 40px
    text-align center

.goal-callout 
    display inline-block
    width 30%
    margin-right 5%
    vertical-align top

    &:last-of-type 
        margin-right 0

    @media (max-width 768px) 
        display block
        width 40%
        padding 0 4%
        margin 34px auto 0
  
        &:last-of-type 
            margin-right auto

    @media (max-width 650px) 
        width auto
  
.goal-callout__icon 
    display inline-block
    width 75%

.goal-callout__copy 
    width 94%
    margin-top 40px
    color #fff
    font-size 23px
    line-height 1.3

.goal-section__link-out 
    text-transform uppercase
    margin-top 42px
    background-color #fff
    padding 20px 36px
    border-radius 36px
    font-size 20px
    font-weight 600

    &:hover,
    &:active 
        background-color #e6e6e6

.results-section 
    padding-top 50px
    padding-bottom 80px
    background-color #f70
    text-align center

.results-section__header 
    color #fff

.results-section__placeholder 
    line-height 200px
    color #fff

.testimonial-section 
    padding-top 50px
    padding-bottom 80px
    backgorund-color #fff
    text-align center

.testimonial-section__header 
    color #32a1e0

.testimonial-carousel 
    margin-top 40px
    font-size 0

.testimonial-carousel__hero 
    display inline-block
    width 32%
    margin-right 5%
    vertical-align top

    img 
        width 100%

    @media (max-width 768px) 
        display block
        margin 0 auto

.testimonial-carousel__copy 
    display inline-block
    text-align left
    width 63%
    font-size 23px
    line-height 36px

    @media (max-width 768px) 
        margin-top 20px
  
.testimonial-section__link-out 
    text-transform uppercase
    margin-top 42px
    background-color #32a1e0
    color #fff
    padding 20px 60px
    border-radius 36px
    font-size 20px
    font-weight 600

    &:hover,
    &:active 
        background-color #2094d6

.fundraiser-section 
    padding-top 50px
    padding-bottom 80px
    background-color #333
    color #fff
    text-align center
    overflow hidden

.fundraiser-section__hero 
    margin-top 24px

.fundraiser-section__copy 
    margin-top 24px
    font-size 24px
    line-height 34px

.fundraiser-section__link-out 
    text-transform uppercase
    margin-top 42px
    background-color #f70
    color #fff
    padding 20px 90px
    border-radius 36px
    font-size 20px
    font-weight 600

    &:hover,
    &:active 
        background-color #e66b00
